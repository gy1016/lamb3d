{
  "include": ["src/"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "skipDefaultLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "baseUrl": "./",
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "types", "packages/*/tests"]
}
